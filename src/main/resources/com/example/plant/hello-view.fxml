<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.plant.HelloController">
    <Label fx:id="plantNameLabel" text="Plant Name: Sunflower" />
    <HBox spacing="10">
        <VBox spacing="5">
            <Label text="Tasks" />
            <ListView fx:id="tasksList" />
            <HBox spacing="5">
                <TextField fx:id="taskInput" />
                <Button fx:id="addTaskButton" onAction="#onAddTaskButtonClick" prefHeight="25.0" prefWidth="137.0" text="Add Task" />
            </HBox>
        </VBox>
        <VBox spacing="5">
            <Label text="Multimedia" />
            <TextArea fx:id="multimediaInput" prefHeight="176.0" prefWidth="379.0" />
            <Button fx:id="uploadImageButton" onAction="#onUploadImageButtonClick" text="Upload Image" />
            <VBox fx:id="imagesBox" spacing="10" />
        </VBox>
    </HBox>
</VBox>
